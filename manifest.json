{
  "manifest_version": 3,
  "name": "Job Auto Apply Extension",
  "version": "1.0.0",
  "description": "Scrapes job listings and automates actions",

  "action": {
    "default_popup": "index.html"
  },

  "permissions": ["storage", "scripting", "activeTab", "tabs"],

  "host_permissions": ["http://*/*", "http://*/*"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
